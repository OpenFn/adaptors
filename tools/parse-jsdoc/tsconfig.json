{
  "include": ["src/**/*.ts"],
  "ts-node": {
    // is this gonna blow up in node 19 though??
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
  }
}
