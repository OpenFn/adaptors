{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "baseUrl": {
      "title": "Host",
      "type": "string",
      "description": "The OpenFn Base URL",
      "format": "uri",
      "default": "https://app.openfn.org",
      "minLength": 1,
      "examples": [
        "https://app.openfn.org"
      ]
    },
    "projectId": {
      "title": "Project ID",
      "type": "string",
      "description": "Your OpenFn project ID",
      "minLength": 1,
      "examples": [
        "some-id"
      ]
    },
    "access_token": {
      "title": "Access Token",
      "type": "string",
      "description": "Your OpenFn access token",
      "minLength": 1
    }
  },
  "type": "object",
  "additionalProperties": true,
  "required": [
    "access_token"
  ]
}