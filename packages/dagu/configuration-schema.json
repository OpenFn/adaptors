{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "baseUrl": {
      "title": "Base URL",
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ],
      "description": "The base URL (http://www.example.com)",
      "format": "uri",
      "minLength": 1,
      "examples": ["https://example.com"]
    },
    "username": {
      "title": "username",
      "type": "string",
      "description": "Dagu account username",
      "writeOnly": true,
      "examples": [
        "admin"
      ]
    },
    "password": {
      "title": "password",
      "type": "string",
      "description": "Dagu account password",
      "writeOnly": true,
      "examples": [
        "password"
      ]
    }
  },
  "type": "object",
  "additionalProperties": true,
  "required": ["baseUrl", "username", "password"]
}
