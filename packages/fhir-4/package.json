    "fhir": "^4.12.0",
    "swc-loader": "^0.2.6",
    "tsx": "^4.19.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "assertion-error": "2.0.0",
    "chai": "4.3.6",
    "deep-eql": "4.1.1",
    "mocha": "^10.7.3",
    "rimraf": "3.0.2",
    "ts-node": "10.9.1",
    "typescript": "5.9.2",
    "undici": "^5.29.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/openfn/adaptors.git"
  },
  "types": "types/index.d.ts",
  "main": "dist/index.cjs",
