    "clean": "rimraf dist docs",
    "clean:gen": "rimraf src/profiles test/resources",
    "pack": "pnpm pack --pack-destination ../../dist"
  },
  "author": "Open Function Group",
  "license": "LGPLv3",
  "type": "module",
  "fhir": {
    "specUrl": "https://hl7.org/fhir/R4B/definitions.json.zip",
