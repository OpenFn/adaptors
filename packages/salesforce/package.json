{
  "name": "@openfn/language-salesforce",
  "version": "3.0.2",
  "description": "Salesforce Language Pack for OpenFn",
  "homepage": "https://docs.openfn.org",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "pnpm clean && build-adaptor salesforce",
    "test": "mocha --experimental-specifier-resolution=node --no-warnings --recursive",
    "test:watch": "mocha -w --experimental-specifier-resolution=node --no-warnings --recursive",
    "clean": "rimraf dist types docs",
    "pack": "pnpm pack --pack-destination ../../dist"
  },
  "author": "Open Function Group",
  "license": "LGPLv3",
  "repository": {
    "type": "git",
    "url": "https://github.com/openfn/adaptors.git"
  },
  "files": [
    "dist/",
    "types/",
    "ast.json",
    "configuration-schema.json"
  ],
  "dependencies": {
    "@openfn/language-common": "1.7.5",
    "@openfn/parse-jsdoc": "workspace:^1.0.0",
    "JSONPath": "^0.10.0",
    "axios": "^0.21.1",
    "jsforce": "^1.11.0",
    "jsonpath": "^1.1.1",
    "mustache": "^2.2.0",
    "lodash": "^4.17.21",
    "yargs": "^3.30.0"
  },
  "devDependencies": {
    "@openfn/buildtools": "workspace:^1.0.2",
    "@openfn/metadata": "workspace:^1.0.0",
    "@openfn/simple-ast": "0.4.1",
    "assertion-error": "1.1.0",
    "chai": "4.3.6",
    "deep-eql": "4.1.1",
    "esno": "^0.16.3",
    "mocha": "7.2.0",
    "nock": "13.2.9",
    "rimraf": "3.0.2",
    "sinon": "^14.0.1",
    "type-detect": "1.0.0"
  },
  "type": "module",
  "types": "types/index.d.ts",
  "main": "dist/index.cjs"
}
