{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "baseUrl": {
            "title": "Base Url",
            "type": "string",
            "description": "The baseUrl",
            "examples": [
                "https://hapi.fhir.org/baseR4"
            ]
        },
        "apiPath": {
            "title": "API Path",
            "anyOf": [
                {
                    "type": "string"
                },
                {
                    "type": "null"
                }
            ],
            "placeholder": "R4",
            "description": "FHIR api path",
            "minLength": 1,
            "examples": [
                "baseR4",
                "R3",
                "R4"
            ]
        },
        "authType": {
            "title": "Auth Type",
            "type": "string",
            "description": "The type of authentication used to authenticate into the destination system",
            "examples": [
                "Basic"
            ]
        },
        "token": {
            "title": "Token",
            "type": "string",
            "description": "The token  used to authenticate into the destination system",
            "examples": [
                "@super!scretetoken"
            ]
        }
    },
    "required": [
        "resource",
        "authType",
        "token"
    ]
}