{
  // TODO: turn this on (and pick styles) after the param-reassign bug is fixed
  // "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-param-reassign": "error",
    "no-undef": "error"
  },
  "env": {
    "node": true
  },
  "globals": {
    "FormData": "readonly",
    "Map": "readonly",
    "Symbol": "readonly",
    "ReadableStream": "readonly",
    "Promise": "readonly"
  }
}
